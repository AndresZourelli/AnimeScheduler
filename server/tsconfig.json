{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "baseUrl": ".",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "baseUrl": ".",
  "include": ["./**/*.ts", "./**/*.tsx"],
  "exclude": ["node_modules/*"]
}
